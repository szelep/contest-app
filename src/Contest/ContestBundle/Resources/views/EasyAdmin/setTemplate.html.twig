{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block main %}
    <div class="row">
        <div class="field-group col-lg-4">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-pencil"></i>
                        Grafiki szablonu
                    </h3>
                </div>
                <div class="box-body">
                {{ form_start(form) }}
                    <div class="form-group  field-text">
                        <label class="control-label">Miniatura konkursu</label><br />
                        {{ form_widget(form.thumbnail) }}
                        <div class="helper">
                            <i class="fa fa-info-circle"></i>
                            Obraz zostanie przeskalowany do szerokości: {{ info.k_width }}px
                        </div>
                        <div>
                        {% if elements.thumbnail is defined %}
                            <hr />
                            <img src="{{ asset('upload/template/'~elements.thumbnail)|imagine_filter('contest_thumbnail') }}"><br />
                            <button class="btn btn-danger btn-xs">Usuń</button>
                        {% endif %}
                        </div>
                    </div>
                    <hr />
                    <div class="form-group  field-text">
                        <label class="control-label">Obraz nagłówka</label><br />
                        {{ form_widget(form.headerImage) }}
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Obraz tła</label><br />
                        {{ form_widget(form.backgroundImage) }}
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Kolor tła</label>
                        {{ form_widget(form.backgroundColor) }}
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Kolor czcionki</label>
                        {{ form_widget(form.fontColor) }}
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Rozmiar czcionki</label>
                        {{ form_widget(form.fontSize) }} px
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Postów w linii</label>
                        {{ form_widget(form.postPerLine) }}
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Szerokość kafelka</label>
                            {{ form_widget(form.postThumbnailWidth) }} px
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Odległość pomiędzy kafelkami</label>
                        {{ form_widget(form.spaceBetweenPost) }} px
                    </div>
                    <div class="form-group  field-text">
                        <label class="control-label">Obraz stopki</label><br />
                        {{ form_widget(form.footerImage) }}
                    </div>
                </div>
            </div>
        </div>
        <style>
        {# PRZENIEŚ STYLE TODO #}
            div.post-list {
                margin-top: 20px;
                margin-bottom: 20px;
            }
        </style>
        <div class="field-group col-lg-8">
            <div class="box box-default">
            <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-pencil"></i>
                        Podgląd
                    </h3>
                </div>
                <div class="box-body">
                    <div style="border: 1px solid #dedede; {% if elements.background_image is defined %}background: url({{ asset('upload/template/'~elements.background_image) }}) {% endif %}">
                        <div style="padding: 10px;">
                            <div id="header-image" style="{% if elements.header_image is defined %}background: url({{ asset('upload/template/'~elements.header_image) }}); min-height: 100px;"{% endif %}></div>
                            <div class="post-list">
                            <div class="card-columns">
                                <div class="card">
                                <!--<img class="card-img-top" src=".../100px180/" alt="Card image cap"> -->
                                    <div class="card-body" data-toggle="modal" data-target="#myModal">
                                        <h5 class="card-title">Wpis</h5>
                                        <p class="card-text">
                                            <br/>
                                            dsadsa
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">Dodano: fds przez: fsd</small>
                                        <i class="fa fa-heart"></i> 5
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div id="footer-image" style="{% if elements.footer_image is defined %}background: url({{ asset('upload/template/'~elements.footer_image) }}); min-height: 100px"{% endif %}></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}